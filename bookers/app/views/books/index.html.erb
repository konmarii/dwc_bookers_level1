  <main>
    <h1>Books</h1>
    <table>
      <thread>
        <th>Title</th>
        <th>Body</th>
        <th colspan='3'></th>
      </thread>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete %>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
        </tr>
       
        
      </tbody>
    <% end %>
      
    </table>
  
    <h2>New book</h2>
    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with model:@book, url:'/books', local:true do |f| %>
      <label>Title</label>
      <div class="field"><%= f.text_field :title %></div>
      <label>Body</label>
      <div class="field"><%= f.text_area :body %></div>
      <div class="input"><%= f.submit 'Create Book' %></div>
    <% end %>
  </main>