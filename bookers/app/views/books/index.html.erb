<main>
  <h1>Books</h1>
  <table>
    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      <tbody></tbody>
    </thread>
  </table>

  <h2>New book</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</main>
